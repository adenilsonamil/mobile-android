<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="org.exoplatform" android:versionCode="2" android:versionName="2.0">

	<!-- Application Permissions -->
	<uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.CAMERA" />
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
	<uses-permission android:name="android.permission.WRITE_OWNER_DATA" />
	<uses-feature android:name="android.hardware.camera" />
	<uses-feature android:name="android.hardware.camera.autofocus" />

	<!-- Application Uses SDK -->
	<uses-sdk android:minSdkVersion="7" />

	<!-- Application Informations -->
	<application android:icon="@drawable/application_icon"
		android:name=".ExoApplication" android:theme="@style/Theme.eXo"
		android:debuggable="true" android:label="eXo Application">

		<!-- First Activity of the Application -->
		<activity android:name=".ui.LoginActivity"
			android:finishOnTaskLaunch="true" android:configChanges="keyboardHidden|orientation">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>

		<activity android:name=".ui.HomeActivity"
			android:clearTaskOnLaunch="true" android:configChanges="keyboardHidden|orientation" />

		<activity android:name=".ui.SettingActivity"
			android:finishOnTaskLaunch="true" android:configChanges="keyboardHidden|orientation" />

		<activity android:name=".ui.SettingServerListEditionActivity"
			android:finishOnTaskLaunch="true" android:configChanges="keyboardHidden|orientation" />

		<activity android:name=".ui.ChatListActivity"
			android:finishOnTaskLaunch="true" android:configChanges="keyboardHidden|orientation" />

		<activity android:name=".ui.DocumentActivity"
			android:finishOnTaskLaunch="true" android:configChanges="keyboardHidden|orientation" />

		<activity android:name=".ui.DocumentActionDialog"
			android:finishOnTaskLaunch="true" android:configChanges="keyboardHidden|orientation" />

		<activity android:name=".ui.DashboardActivity"
			android:finishOnTaskLaunch="true" android:configChanges="keyboardHidden|orientation" />

		<activity android:name=".ui.WebViewActivity"
			android:finishOnTaskLaunch="true" android:configChanges="keyboardHidden|orientation" />

		<activity android:name=".document.ExoFilesController"
			android:finishOnTaskLaunch="true" android:configChanges="keyboardHidden|orientation" />

		<activity android:name=".ui.ChatDetailActivity"
			android:finishOnTaskLaunch="true" android:configChanges="keyboardHidden|orientation" />

		<activity android:name=".chat.ExoChatListController"
			android:finishOnTaskLaunch="true" android:configChanges="keyboardHidden|orientation" />

		<activity android:name=".ui.social.SocialActivity"
			android:finishOnTaskLaunch="true" android:configChanges="keyboardHidden|orientation" />

		<activity android:name=".ui.social.SocialDetailActivity"
			android:finishOnTaskLaunch="true" android:configChanges="keyboardHidden|orientation" />

		<activity android:name=".ui.social.ComposeMessageActivity"
			android:finishOnTaskLaunch="true" android:configChanges="keyboardHidden|orientation" />

		<activity android:name=".ui.social.SocialImageLibrary"
			android:finishOnTaskLaunch="true" android:configChanges="keyboardHidden|orientation" />

		<activity android:name=".ui.social.SelectedImageActivity"
			android:finishOnTaskLaunch="true" android:configChanges="keyboardHidden|orientation" />

		<activity android:name=".ui.social.SocialPhotoAlbums"
			android:finishOnTaskLaunch="true" android:configChanges="keyboardHidden|orientation" />

		<activity android:name=".ui.social.SocialAttachedImageActivity"
			android:finishOnTaskLaunch="true" android:configChanges="keyboardHidden|orientation" />

	</application>
</manifest> 