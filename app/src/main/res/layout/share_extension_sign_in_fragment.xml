<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:text="@string/UserNameCellTitle"
        android:textColor="#535353"
        android:textSize="@dimen/title_txt_size"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/share_signin_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/compose_textfield_background"
        android:padding="@dimen/margin_m"
        android:text="@string/UserNameHint"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:text="@string/PasswordCellTitle"
        android:textColor="#535353"
        android:textSize="@dimen/title_txt_size"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/share_signin_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/compose_textfield_background"
        android:inputType="textPassword"
        android:paddingLeft="@dimen/margin_m"
        android:paddingRight="@dimen/margin_m">

        <requestFocus/>
    </EditText>

</LinearLayout>
