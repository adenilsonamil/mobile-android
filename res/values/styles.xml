<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="background_color">
        <item name="android:background">#dcdcdc</item>
    </style>

    <style name="TextAppearanceLarge" parent="@style/TextAppearance.Large">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TitleTextAppearance">
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1.0</item>
        <item name="android:shadowDy">2.0</item>
        <item name="android:shadowRadius">1.0</item>
    </style>

    <style name="DialogText">
        <item name="android:textColor">#FF000000</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="DialogText.Title">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textview_name">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#115ead</item>
    </style>

    <style name="textview_content">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#808080</item>
        <item name="android:textColorLink">#155EAD</item>
    </style>

    <style name="textview_time">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">#696969</item>
    </style>

    <style name="textview_number">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="textview_like">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="textview_header">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#155EAD</item>
    </style>

    <style name="textview_home">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="textview_activity_name_home">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="textview_activity_title_home">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#828282</item>
    </style>

    <style name="HomeButton">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:drawablePadding">2dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/accent_1</item>
        <item name="android:background">@null</item>
    </style>

    <style name="HomeButtonStyle">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:drawablePadding">2dp</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/accent_1</item>
        <item name="android:background">@null</item>
    </style>

    <!-- Signup:  edit text with background drawable -->
    <style name="SignUpEditTxtStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center|left</item> <!-- center text vertically and left -->
        <item name="android:textSize">14sp</item>
        <item name="android:textColorHint">#B3B3B3</item>
        <item name="android:paddingLeft">60dp</item> <!-- push text behind the icon -->
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <!-- Signup:  heading text -->
    <style name="SignUpHeadingTxtStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <!-- android:gravity - change gravity depending on alignment of text -->
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#464646</item>
        <item name="android:singleLine">true</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/bg_heading</item>
    </style>

    <!-- Signup:  blue button -->
    <style name="SignUpBlueBtnStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:background">@drawable/btn_blue</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">15dp</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Signup: alert text -->
    <style name="SignUpAlertTxtStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">9sp</item>
        <item name="android:drawableLeft">@drawable/alert_icon_small</item>
        <item name="android:visibility">invisible</item>
    </style>

    <!-- Signup: blue header -->
    <style name="SignUpBlueHeaderStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">?attr/gdActionBarTitleColor</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/action_bar_background_repeate</item>
    </style>

    <!-- Server setting: table style -->
    <style name="ServerSettingTableStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:background">#818487</item>
    </style>

    <style name="ServerSettingTableFirstRowStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:layout_marginRight">1dp</item>
        <item name="android:layout_marginLeft">1dp</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="ServerSettingTableRowStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="ServerSettingTextViewStyle">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">#565656</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ServerSettingEditTextHinttyle">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColorHint">#999999</item>
    </style>

</resources>