<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/MainLayout" android:orientation="vertical"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:background="@drawable/background">

	<ImageView android:layout_x="0sp" android:layout_y="0sp"
		android:id="@+id/ImageView01" android:layout_width="wrap_content"
		android:layout_height="40sp" />

	<Button android:id="@+id/Button_Close" android:layout_x="2sp"
		android:layout_y="02sp" android:layout_width="wrap_content"
		android:layout_height="38sp" />
	<Button android:id="@+id/Button_Language_Help"
		android:layout_width="30sp" android:layout_height="30sp"
		android:layout_x="285sp" android:layout_y="05sp"
		android:background="@drawable/optionsettingsbutton" />

	<EditText android:id="@+id/EditTextImageName"
		android:layout_x="5sp" android:layout_y="50sp" android:layout_width="310sp"
		android:layout_height="40sp" android:hint="newImage.jpg" />

	<ImageView android:id="@+id/ImageView" android:layout_x="40sp"
		android:layout_y="100sp" android:layout_width="240sp"
		android:layout_height="270sp" />

	<Button android:text="Upload" android:id="@+id/ButtonUpImage"
		android:textColor="#000000" android:shadowColor="#888888"
		android:shadowDx="1.0" android:shadowDy="2.0" android:shadowRadius="1.0"
		android:background="@drawable/send_button_background_shape"
		android:layout_x="30sp" android:layout_y="380sp" android:layout_width="120sp"
		android:layout_height="40dp" />

	<Button android:text="Cancel" android:id="@+id/ButtonCancel"
		android:textColor="#FFFFFF" android:shadowColor="#000000"
		android:shadowDx="1.0" android:shadowDy="2.0" android:shadowRadius="1.0"
		android:background="@drawable/cancel_button_background_shape"
		android:layout_x="170sp" android:layout_y="380sp"
		android:layout_width="120sp" android:layout_height="40dp" />

</AbsoluteLayout>
