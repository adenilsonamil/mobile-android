<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/MainLayout" android:orientation="vertical"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	>

	<ImageView android:layout_marginLeft="0dip" android:layout_marginTop="0dip"
		android:id="@+id/ImageView_NavigationBar" android:layout_width="fill_parent"
		android:layout_height="40dip" android:background="@drawable/navigationbar" />

	<Button
		android:id="@+id/Button_Done"
		android:layout_alignParentLeft="true"
		android:layout_marginLeft="5dip"
		android:layout_marginTop="5dip"
		android:layout_width="wrap_content" 
		android:layout_height="34dip" 
		android:text="Done"
		/>
	<Button
		android:id="@+id/Button_Add"
		android:layout_alignParentRight="true"
		android:layout_marginRight="5dip"
		android:layout_marginTop="5dip"
		android:layout_width="wrap_content" 
		android:layout_height="34dip" 
		android:text=" + "
		/>
		
		<Button android:id="@+id/Button_SignOut"
		android:layout_toLeftOf="@id/Button_Add"
		android:layout_marginRight="5dip"
		android:layout_marginTop="5dip"
		android:layout_width="30dip"
		android:background="@drawable/logout"
		android:layout_height="30dip" />
	 
	<GridView 
		android:id="@+id/gridView1" 
		android:layout_below="@id/ImageView_NavigationBar"
		android:layout_width="fill_parent" 
		android:layout_weight="1" 
		android:layout_height="fill_parent" 
		android:stretchMode="columnWidth" 
		android:columnWidth="90dip" 
		android:numColumns="auto_fit"/>

</RelativeLayout>