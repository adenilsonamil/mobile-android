<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal" android:layout_width="fill_parent"
	android:id="@+id/authenticate_server_listview_item" android:gravity="center"
	android:padding="5dp" android:layout_height="wrap_content"
	android:background="@drawable/authenticate_server_cell_bg_normal">
	<LinearLayout android:layout_width="fill_parent"
		android:padding="3dp" android:layout_weight="1" android:orientation="vertical"
		android:id="@+id/authenticate_server_listview_item"
		android:layout_height="wrap_content">
		<TextView android:id="@+id/TextView_ServerName" android:text="Server Name"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:layout_marginLeft="5dp" android:textStyle="bold"
			android:singleLine="true" android:textColor="#000000" />
		<TextView android:id="@+id/TextView_URL" android:text="Server url"
			android:layout_marginLeft="5dp" android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:textSize="13dip"
			android:textColor="#000000" />
	</LinearLayout>
	<ImageView android:id="@+id/ImageView_Checked"
		android:layout_centerInParent="true" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:background="@drawable/authenticate_checkmark_on" />

</LinearLayout>