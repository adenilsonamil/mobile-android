<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="wrap_content"
	android:minWidth="280dip" android:layout_height="wrap_content"
	android:background="@drawable/bottom_background_shape">
	<LinearLayout android:layout_marginTop="20dp"
		android:layout_marginBottom="20dp" android:layout_width="fill_parent"
		android:layout_height="wrap_content">
		<TextView android:id="@+id/logout_content" style="@style/DialogText.Title"
			android:text="Connection error" android:paddingRight="8dip"
			android:paddingLeft="8dip" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:paddingBottom="3dip"
			android:paddingTop="3dip" android:textColor="#000000" />
	</LinearLayout>

	<LinearLayout android:orientation="horizontal"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:layout_marginBottom="2dip" android:padding="3dip">
		<Button android:layout_width="0dip" android:layout_weight="1"
			android:layout_marginTop="15dp" android:id="@+id/logout_ok_button"
			android:text="Ok" android:textColor="#FFFFFF"
			android:background="@drawable/send_button_background_shape"
			android:layout_height="40dp" />

		<Button android:layout_width="0dip" android:layout_weight="1"
			android:layout_marginTop="15dp" android:id="@+id/logout_cancel_button"
			android:text="Cancel" android:textColor="#FFFFFF"
			android:layout_marginLeft="3dp" android:background="@drawable/cancel_button_background_shape"
			android:layout_height="40dp" />

	</LinearLayout>

</LinearLayout>
