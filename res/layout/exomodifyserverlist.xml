<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content" android:layout_height="wrap_content">
	<ImageView android:id="@+id/ImageView_Navigationbar"
		android:layout_width="fill_parent" android:layout_height="40dip"
		android:background="@drawable/navigationbar" />
	<Button android:id="@+id/Button_Home" android:layout_marginLeft="5dip"
		android:layout_marginRight="5dip" android:layout_width="30dip"
		android:layout_height="30sp" android:background="@drawable/home" />
		
	<Button android:id="@+id/Button_Add" 
	android:layout_alignParentRight="true"
	android:layout_marginTop="5dip"
		android:layout_marginRight="5dip" android:layout_width="30dip"
		android:layout_height="30dip" android:background="@drawable/addfolder" />
	
	<ListView android:id="@+id/ListView_Server_List"
		android:layout_below="@id/ImageView_Navigationbar" android:layout_width="fill_parent"
		android:layout_height="wrap_content" />

</RelativeLayout>
