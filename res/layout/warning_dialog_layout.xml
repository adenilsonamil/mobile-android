<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="wrap_content"
	android:minWidth="280dip" android:layout_height="wrap_content"
	android:background="@drawable/bottom_background_shape">

	<LinearLayout android:orientation="vertical"
		android:layout_width="fill_parent" android:layout_height="wrap_content">

		<TextView android:id="@+id/warning_title" style="@style/DialogText.Title"
			android:text="Warning" android:layout_gravity="center"
			android:paddingRight="8dip" android:paddingLeft="8dip"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:paddingBottom="3dip" android:paddingTop="3dip"
			android:textColor="#FF8000" />

	</LinearLayout>

	<LinearLayout android:layout_marginTop="20dp"
		android:layout_marginBottom="20dp" android:layout_width="fill_parent"
		android:layout_height="wrap_content">
		<TextView android:id="@+id/warning_content" style="@style/DialogText.Title"
			android:text="Connection error" android:paddingRight="8dip"
			android:paddingLeft="8dip" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:paddingBottom="3dip"
			android:paddingTop="3dip" android:textColor="#000000" />


	</LinearLayout>

	<Button android:layout_marginTop="15dp" android:id="@+id/warning_ok_button"
		android:text="Ok" android:textColor="#FFFFFF"
		android:background="@drawable/send_button_background_shape"
		android:layout_width="fill_parent" android:layout_height="40dp" />



</LinearLayout>
