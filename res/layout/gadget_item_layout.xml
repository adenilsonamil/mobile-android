<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal" android:padding="5dip"
	android:layout_width="fill_parent" android:layout_height="wrap_content"
	android:background="#ffffff">
	<RelativeLayout android:background="@drawable/bottom_background_shape"
		android:layout_gravity="center_vertical" android:padding="2.5dip"
		android:layout_marginLeft="5dip"
		android:id="@+id/imageView_Avatar_wrap" android:layout_height="wrap_content"
		android:layout_width="wrap_content">
		<greendroid.widget.AsyncImageView
			android:layout_centerInParent="true" android:id="@+id/gadget_image"
			android:layout_height="43dip" android:layout_width="43dip" />
		<ImageView android:background="@drawable/activity_avatar_shadow"
			android:layout_centerInParent="true" android:layout_height="43dip"
			android:layout_width="43dip" />
	</RelativeLayout>

	<LinearLayout android:orientation="vertical"
		android:layout_weight="1" android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_marginRight="5dip"
		android:gravity="center_vertical">
		<TextView android:id="@+id/gadget_title" style="@style/textview_name"
			android:text="gadge title" android:layout_height="wrap_content"
			android:layout_marginLeft="10dip" android:layout_marginTop="5dip"
			android:textColor="#62656A"
			android:layout_width="fill_parent" android:textStyle="bold" />

		<TextView android:id="@+id/gadget_content" style="@style/textview_content"
			android:text="gadge content" android:layout_height="wrap_content"
			android:layout_marginLeft="10dip" android:layout_marginTop="3dip"
			android:layout_marginBottom="10dip"
			android:layout_width="fill_parent" />
	</LinearLayout>

</LinearLayout>
