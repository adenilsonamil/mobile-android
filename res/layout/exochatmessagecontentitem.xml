<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal" android:layout_width="fill_parent"
	android:layout_height="wrap_content">

	<TextView android:id="@+id/TextView_Name" android:text="User"
		android:padding="5dp" android:layout_marginLeft="1dip"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:textColor="#000000" android:textStyle="bold" />

	<LinearLayout android:layout_width="fill_parent"
		android:padding="1dp" android:layout_height="wrap_content"
		android:layout_weight="1" android:background="@drawable/chat_message_discuss_user_bg">
		<TextView android:id="@+id/TextView_Content" android:padding="5dp"
			android:typeface="serif" android:textColor="#000000"
			android:layout_marginLeft="20dp" android:text="Message content"
			android:layout_width="fill_parent" android:layout_height="wrap_content" />
	</LinearLayout>

</LinearLayout>
 