<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/welcome_bg_repeat">

    <TextView
            android:id="@+id/onpremise_title_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="?attr/gdActionBarTitleColor"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="@string/OnPremise"
            android:background="@drawable/action_bar_background_repeate"/>

    <!-- include does not work -->
    <ImageView
            android:id="@+id/onpremise_eXo_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/onpremise_title_txt"
            android:src="@drawable/exo_application_logo"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="5dp"/>

    <TextView
            android:id="@+id/onpremise_slogan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/onpremise_title_txt"
            android:layout_toRightOf="@id/onpremise_eXo_logo"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="15dp"
            android:text="@string/Slogan"
            android:textStyle="bold"
            android:textSize="13dp"
            android:textColor="#B6B7BB"
            android:singleLine="true" />

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/onpremise_slogan"
                    android:background="@drawable/bg_white_repeat">

        <TextView
                android:id="@+id/onpremise_url_txt"
                style="@style/SignUpHeadingTxtStyle"
                android:gravity="left"
                android:text="@string/EnterUrl"
                android:layout_marginBottom="15dp"/>

        <EditText
                android:id="@+id/onpremise_url_edit_txt"
                style="@style/SignUpEditTxtStyle"
                android:layout_below="@id/onpremise_url_txt"
                android:hint="@string/YourIntranetHint"
                android:inputType="textUri"
                android:background="@drawable/edit_email"
                android:layout_marginBottom="15dp"/>

        <TextView
                android:id="@+id/onpremise_login_txt"
                style="@style/SignUpHeadingTxtStyle"
                android:layout_below="@id/onpremise_url_edit_txt"
                android:gravity="left"
                android:text="@string/EnterLogin"
                android:layout_marginBottom="15dp" />

        <TextView
                android:id="@+id/onpremise_alert_txt"
                style="@style/SignUpAlertTxtStyle"
                android:layout_below="@id/onpremise_login_txt"
                android:text="@string/InvalidEmail"
                android:layout_centerInParent="true"
                android:layout_marginBottom="5dp" />

        <EditText
                android:id="@+id/onpremise_user_edit_txt"
                style="@style/SignUpEditTxtStyle"
                android:layout_below="@id/onpremise_alert_txt"
                android:hint="@string/UserNameHint"
                android:inputType="textEmailAddress"
                android:background="@drawable/edit_email"
                android:layout_marginBottom="5dp"/>

        <EditText
                android:id="@+id/onpremise_pass_edit_txt"
                style="@style/SignUpEditTxtStyle"
                android:layout_below="@id/onpremise_user_edit_txt"
                android:hint="@string/PasswordHint"
                android:inputType="textPassword"
                android:background="@drawable/edit_email"
                android:layout_marginBottom="15dp"/>

        <Button
                android:id="@+id/onpremise_login_btn"
                style="@style/SignUpBlueBtnStyle"
                android:layout_below="@id/onpremise_pass_edit_txt"
                android:layout_centerHorizontal="true"
                android:text="@string/LogIn"
                android:paddingBottom="15dp" />

    </RelativeLayout>

</RelativeLayout>