<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content" android:layout_height="wrap_content"
	android:background="@drawable/androidgeneralbg">

	<TextView android:text="Language" android:id="@+id/TextView_Language"
		android:textSize="18dip"
		android:layout_width="fill_parent" android:layout_height="40dip"
		android:background="@drawable/mybackground"
		/>

	<RadioGroup android:layout_width="fill_parent"
	android:id="@+id/RadioButton_Language"
		android:layout_height="wrap_content" android:orientation="vertical"
		android:layout_below="@id/TextView_Language">
		<RadioButton android:id="@+id/RadioButton_English"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:text="English" />
		<RadioButton android:id="@+id/RadioButton_French"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:text="French" />
	</RadioGroup>

	<TextView android:text="Server List" android:id="@+id/TextView_Server_List"
		android:textSize="18dip"
		android:layout_width="fill_parent" android:layout_height="40dip"
		android:layout_below="@id/RadioButton_Language"
		android:background="@drawable/mybackground" />
		
	<ListView android:id="@+id/ListView_Servers"
	android:layout_above="@+id/Button_Modify_The_List" 
		android:layout_below="@id/TextView_Server_List" android:layout_width="fill_parent"
		android:layout_height="wrap_content" 
		android:cacheColorHint="#00000000"/>

	<Button android:text="Modify the List" android:id="@+id/Button_Modify_The_List"
	android:layout_above="@+id/Button_User_Guide"
	android:layout_marginLeft="60dip"
	android:layout_marginRight="60dip"
		 android:layout_width="fill_parent"
		android:layout_height="40dip" />

	<Button android:text="User Guide" android:id="@+id/Button_User_Guide"
	android:layout_alignParentBottom="true"
	android:layout_marginLeft="30dip"
	android:layout_marginRight="30dip"
		android:layout_width="fill_parent"
		android:layout_height="40dip" />
</RelativeLayout>
