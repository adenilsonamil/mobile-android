<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="280dip" android:layout_height="wrap_content">

	<ImageView android:id="@+id/ImageView_Navigationbar"
		android:layout_width="fill_parent" android:layout_height="40dip"
		android:background="#4E4E4E" />

	<TextView android:id="@+id/TextView_Title"
		android:layout_width="fill_parent" android:layout_height="40dip"
		android:shadowColor="#000000"
		android:shadowDx="1.0" android:shadowDy="2.0"
		android:shadowRadius="1.0" android:textSize="18dip"
		android:textColor="#FFFFFFFF" android:gravity="center" />

	<RelativeLayout android:id="@+id/RelativeLayout_TextfieldPanel"
		android:layout_below="@id/ImageView_Navigationbar"
		android:layout_width="fill_parent" android:layout_height="180dip"
		android:background="@drawable/serveraddingbackgroundtextfieldspanel">

		<TextView android:id="@+id/TextView_Server_Name"
			android:layout_width="fill_parent" android:layout_height="20dip"
			android:layout_marginTop="10dip" android:layout_marginLeft="10dip"
			android:textSize="18dip" android:textColor="#FF000000" />

		<EditText android:id="@+id/EditText_Server_Name"
			android:layout_below="@id/TextView_Server_Name"
			android:layout_marginLeft="10dip" android:layout_marginRight="10dip"
			android:layout_height="40dip" android:inputType="textNoSuggestions"
			android:textSize="16dip" android:layout_width="fill_parent"
			android:layout_marginTop="5dip" android:textColor="#FF000000"
			android:background="@drawable/settingcellstreachablebackground" />


		<TextView android:id="@+id/TextView_Server_URL"
			android:layout_below="@id/EditText_Server_Name" android:layout_width="fill_parent"
			android:layout_height="20dip" android:layout_marginTop="10dip"
			android:textSize="18dip" android:layout_marginLeft="10dip"
			android:textColor="#FF000000" />

		<EditText android:id="@+id/EditText_Server_URL"
			android:layout_below="@id/TextView_Server_URL" android:inputType="textUri"
			android:layout_marginLeft="10dip" android:layout_marginRight="10dip"
			android:layout_marginTop="10dip" android:layout_height="40dip"
			android:layout_width="fill_parent" android:textSize="16dip"
			android:textColor="#FF000000" android:background="@drawable/settingcellstreachablebackground" />

	</RelativeLayout>

	<RelativeLayout android:id="@+id/RelativeLayout_ButtonPanel"
		android:layout_below="@id/RelativeLayout_TextfieldPanel"
		android:layout_width="fill_parent" android:layout_height="60dip"
		android:background="@drawable/serveraddbuttonpanelbackground">

		<Button android:id="@+id/Button_Delete_Cancel"
			android:layout_width="100dip" android:layout_height="44dip"
			android:layout_marginLeft="10dip" android:layout_marginTop="7dip"
			android:background="@drawable/cancel_button_background_shape"
			android:textColor="#ffffff" android:text="Delete"
			android:shadowColor="#000000"
			android:shadowDx="1.0" android:shadowDy="2.0"
			android:shadowRadius="1.0"  />

		<Button android:id="@+id/Button_OK" android:layout_width="100dip"
			android:layout_alignParentRight="true" android:layout_marginRight="10dip"
			android:layout_marginTop="7dip" android:layout_height="44dip"
			android:background="@drawable/send_button_background_shape" 
			android:shadowColor="#888888" android:shadowDx="1.0" android:shadowDy="2.0"
			android:shadowRadius="1.0" android:text="OK" />
	</RelativeLayout>


</RelativeLayout>
