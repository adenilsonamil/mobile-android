<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="280dip" android:layout_height="260dip"
	android:background="@drawable/background">

	<ImageView
		android:id="@+id/ImageView_Navigationbar" android:layout_width="fill_parent"
		android:layout_height="40dip" android:background="@drawable/navigationbar" />

	<TextView android:id="@+id/TextView_Title"
		android:layout_width="fill_parent" android:layout_height="30dip"
		android:layout_marginTop="10dip" android:textSize="18dip"
		android:textColor="#FF000000" android:gravity="center" />

	<TextView android:id="@+id/TextView_Server_Name"
		android:layout_width="fill_parent" android:layout_height="20dip"
		android:layout_marginTop="10dip"
		android:layout_below="@id/ImageView_Navigationbar" android:textSize="18dip" />
	<EditText android:id="@+id/EditText_Server_Name"
		android:layout_below="@id/TextView_Server_Name" android:layout_height="40dip"
		android:inputType="textNoSuggestions"
		android:layout_width="fill_parent" android:textColor="#FF000000" />

	<TextView android:id="@+id/TextView_Server_URL"
	android:layout_below="@id/EditText_Server_Name"
		android:layout_width="fill_parent" android:layout_height="20dip"
		android:layout_marginTop="10dip" android:textSize="18dip" />
	<EditText android:id="@+id/EditText_Server_URL"
	android:layout_below="@id/TextView_Server_URL"
	android:inputType="textUri"
		android:layout_marginTop="10dip" android:layout_height="40dip"
		android:layout_width="fill_parent" android:textColor="#FF000000" />

	<Button android:id="@+id/Button_Delete_Cancel"
	android:layout_alignParentBottom="true"
		android:layout_width="100dip" android:layout_height="40dip"
		android:layout_marginLeft="20dip" />

	<Button android:id="@+id/Button_OK" android:layout_width="100dip"
	android:layout_alignParentBottom="true"
	android:layout_alignParentRight="true"
	android:layout_marginRight="20dip"
		android:layout_height="40dip"
		 />

</RelativeLayout>
