<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal" android:layout_width="fill_parent"
	android:layout_height="wrap_content" android:background="@drawable/settingcellstreachablebackground">
	<TextView android:id="@+id/TextView_ServerName"
		android:layout_width="140dip" android:layout_height="wrap_content"
		android:layout_alignParentLeft="true" android:textStyle="bold"
		android:textColor="#000000" android:gravity="center_vertical" />
	<RelativeLayout android:orientation="horizontal"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:layout_alignParentRight="true" android:layout_toRightOf="@+id/TextView_ServerName">
		<TextView android:id="@+id/TextView_URL"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_alignParentLeft="true" android:layout_marginRight="30dip"
			android:textColor="#000000" android:gravity="center_vertical" />
		<ImageView android:id="@+id/ImageView_Checked"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_marginTop="5dip" android:layout_alignParentRight="true"
			android:layout_toLeftOf="@+id/TextView_URL" android:background="@drawable/authenticate_checkmark_on"
			android:tag="2" />
	</RelativeLayout>
</RelativeLayout>