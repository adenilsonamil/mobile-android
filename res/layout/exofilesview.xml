<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/MainLayout" android:orientation="vertical"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:background="@drawable/home_background">

	<ViewStub android:id="@+id/file_empty_stub"
		android:inflatedId="@+id/file_empty_stub_inflated" android:layout="@layout/empty_screen"
		android:visibility="gone" android:layout_centerInParent="true"
		android:layout_width="wrap_content" android:layout_height="wrap_content" />

	<ImageView android:id="@+id/ImageViewEmptyPage"
		android:layout_width="fill_parent" android:layout_height="fill_parent"
		android:background="@drawable/emptypage" />

	<TextView android:layout_below="@id/ImageViewEmptyPage"
		android:text="Empty page" android:layout_marginTop="300dip"
		android:layout_width="fill_parent" android:layout_height="40dip"
		android:id="@+id/TextView_EmptyPage" android:textSize="18dip"
		android:gravity="center" android:textColor="#000000" />

	<ListView android:id="@+id/ListView_Files"
		android:layout_width="fill_parent" android:layout_height="fill_parent"
		android:cacheColorHint="#00000000" />

	<Button android:text="Upload" android:id="@+id/ButtonUpImage"
		android:layout_alignParentBottom="true" android:layout_marginLeft="30dip"
		android:layout_marginBottom="20dip" android:layout_width="120dip"
		android:layout_height="44dip" />

	<Button android:text="Cancel" android:id="@+id/ButtonCancel"
		android:layout_alignParentBottom="true"
		android:layout_alignParentRight="true" android:layout_marginRight="30dip"
		android:layout_marginBottom="20dip" android:layout_width="120dip"
		android:layout_height="44dip" />

	<ImageView android:id="@+id/ImageView"
		android:layout_marginTop="10dip" android:layout_marginLeft="10dip"
		android:layout_marginRight="10dip" android:layout_marginBottom="10dip"
		android:layout_above="@id/ButtonCancel" android:layout_width="fill_parent"
		android:layout_height="fill_parent" />

</RelativeLayout>