<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/MainLayout" android:orientation="vertical"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:background="@drawable/androidgeneralbg">

	<ImageView android:id="@+id/ImageViewEmptyPage"
		android:layout_width="fill_parent" android:layout_height="fill_parent"
		android:background="@drawable/emptypage" />

	<TextView android:layout_below="@id/ImageViewEmptyPage"
		android:text="Empty page" android:layout_marginTop="300dip"
		android:layout_width="fill_parent" android:layout_height="40dip"
		android:id="@+id/TextView_EmptyPage" android:textSize="18dip"
		android:gravity="center" android:textColor="#000000" />

	<ListView android:id="@+id/ListView_Files"
		android:layout_width="fill_parent" android:layout_height="fill_parent"
		android:cacheColorHint="#00000000" />

	<!--<EditText android:id="@+id/EditTextImageName" android:layout_marginLeft="5dip" 
		android:layout_marginRight="5dip" android:layout_marginTop="50dip" android:layout_width="fill_parent" 
		android:layout_height="40dip" android:hint="new image.jpg" /> -->
	<ImageView android:id="@+id/ImageView" android:layout_x="40sp"
		android:layout_y="100sp" android:layout_width="240sp"
		android:layout_marginBottom="5dp" android:layout_height="340sp"
		android:layout_centerInParent="true" />

	<Button android:text="Upload" android:id="@+id/ButtonUpImage"
		android:layout_alignParentBottom="true" android:layout_marginLeft="30dip"
		android:layout_marginBottom="20dip" android:layout_width="120dip"
		android:layout_height="44dip" />

	<Button android:text="Cancel" android:id="@+id/ButtonCancel"
		android:layout_alignParentBottom="true"
		android:layout_alignParentRight="true" android:layout_marginRight="30dip"
		android:layout_marginBottom="20dip" android:layout_width="120dip"
		android:layout_height="44dip" />

</RelativeLayout>