<?xml version="1.0" encoding="utf-8"?>
<eXo.eXoPlatform.ActivityStreamBrowserCellView
	xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/RelativeLayout_Activity_Streams"
	android:layout_width="fill_parent" android:layout_height="wrap_content"
	android:background="#08387B">

	<RelativeLayout android:background="@drawable/bottom_background_shape"
		android:id="@+id/imageView_Avatar_wrap" android:layout_height="wrap_content"
		android:layout_width="wrap_content" android:layout_marginLeft="5dip"
		android:layout_marginTop="10dip" android:layout_alignParentLeft="true">
		<greendroid.widget.AsyncImageView
			android:padding="1dp" android:layout_centerInParent="true"
			android:id="@+id/imageView_Avatar" android:layout_height="50dip"
			android:layout_width="50dip" />
		<ImageView android:background="@drawable/activity_avatar_shadow"
			android:layout_centerInParent="true" android:layout_height="48dip"
			android:layout_width="48dip" />

	</RelativeLayout>


	<RelativeLayout android:id="@+id/relativeLayout_Content"
		android:padding="3dp" android:layout_height="wrap_content"
		android:layout_marginLeft="2dip" android:layout_marginRight="7dp"
		android:layout_marginTop="10dip" android:layout_toRightOf="@id/imageView_Avatar_wrap"
		android:layout_width="fill_parent" android:background="@drawable/social_activity_browser_bg">

		<TextView android:id="@+id/textView_Name" android:textStyle="bold"
			android:textColor="#000000" android:layout_height="wrap_content"
			android:text="Name" android:layout_marginLeft="10dip"
			android:layout_marginTop="5dip" android:layout_width="wrap_content" />

		<TextView android:id="@+id/textView_Message"
			android:textColor="#000000" android:layout_height="wrap_content"
			android:text="Test message" android:layout_marginLeft="10dip"
			android:layout_marginTop="5dip" android:layout_below="@id/textView_Name"
			android:layout_width="fill_parent" />

		<TextView android:id="@+id/button_Comment" android:textColor="#000000"
			android:layout_height="wrap_content" android:text="Comment"
			android:layout_width="wrap_content" android:layout_marginLeft="0dip"
			android:layout_marginTop="10dip" android:layout_marginRight="10dip"
			android:layout_alignParentRight="true" android:layout_below="@id/textView_Message"
			android:background="@drawable/socialactivitybrowsercommentbutton" />

		<TextView android:id="@+id/button_Like" android:textColor="#000000"
			android:layout_height="wrap_content" android:text="Like"
			android:layout_width="wrap_content" android:layout_marginLeft="10dip"
			android:layout_marginTop="10dip" android:layout_toLeftOf="@id/button_Comment"
			android:layout_below="@id/textView_Message" android:background="@drawable/socialactivitybrowserlikebutton" />

		<TextView android:id="@+id/textView_Time" android:textColor="#696969"
			android:padding="3dp" android:textSize="13dp" android:layout_height="wrap_content"
			android:text="20 Minutes Ago" android:layout_below="@id/textView_Message"
			android:layout_marginLeft="10dip" android:layout_marginTop="10dip"
			android:layout_width="120dip" />
	</RelativeLayout>

	<TextView android:id="@+id/textView_Show_More"
		android:padding="7dp" android:gravity="center" android:layout_height="fill_parent"
		android:text="Show more" android:textStyle="bold"
		android:layout_width="fill_parent" android:visibility="invisible" />

</eXo.eXoPlatform.ActivityStreamBrowserCellView>
