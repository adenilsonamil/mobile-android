<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/bg_white_repeat"
                android:padding="20dp">

    <ImageView
        android:id="@+id/signup_ok_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ok_mark"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp" />

    <TextView
        android:id="@+id/signup_check_mail_txt"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:layout_below="@id/signup_ok_img"
        android:text="@string/CheckYourMailInbox"
        android:textStyle="bold"
        android:textColor="#2865CC"
        android:textSize="13sp"
        android:layout_marginBottom="30dp"/>

    <Button
        android:id="@+id/signup_check_mail_btn"
        style="@style/SignUpBlueBtnStyle"
        android:layout_below="@id/signup_check_mail_txt"
        android:text="@string/CheckMail"
        android:layout_centerHorizontal="true"
        android:paddingBottom="10dp" />

</RelativeLayout>