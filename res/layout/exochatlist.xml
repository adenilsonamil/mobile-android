<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/MainLayout" android:orientation="vertical"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:background="@drawable/home_background">

	<ListView android:id="@+id/ListViewChatList"
		android:layout_width="fill_parent" android:layout_height="fill_parent"
		android:cacheColorHint="#00000000" android:divider="@drawable/chatcontactcellceparator"
		android:dividerHeight="1dip" />
	<ViewStub android:id="@+id/chat_empty_stub"
		android:inflatedId="@+id/chat_empty_stub_inflated" android:layout="@layout/empty_screen"
		android:visibility="gone" android:layout_gravity="center"
		android:layout_width="wrap_content" android:layout_height="wrap_content" />

</RelativeLayout>